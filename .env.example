# ========================================
# API Configuration
# ========================================
# Backend API base URL - required for all API calls
# Development: http://localhost:8000
# Production: https://api.yourplatform.com
NEXT_PUBLIC_API_URL=http://localhost:8000

# ========================================
# Authentication & Security
# ========================================
# JWT Secret for token encryption (if handling auth on frontend)
# Generate with: openssl rand -base64 32
# JWT_SECRET=

# NextAuth configuration (if using NextAuth.js)
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=your-secret-key-here

# Session configuration
# SESSION_TIMEOUT=3600000 # 1 hour in milliseconds

# ========================================
# Database (if using frontend DB)
# ========================================
# DATABASE_URL=postgresql://user:password@localhost:5432/padhaiHub

# ========================================
# Payment Gateway Integration
# ========================================
# eSewa Payment Gateway (Nepal)
# NEXT_PUBLIC_ESEWA_MERCHANT_ID=
# NEXT_PUBLIC_ESEWA_SECRET_KEY=
# NEXT_PUBLIC_ESEWA_URL=https://uat.esewa.com.np/epay/main # UAT
# NEXT_PUBLIC_ESEWA_URL=https://esewa.com.np/epay/main # Production

# Khalti Payment Gateway (Nepal)
# NEXT_PUBLIC_KHALTI_PUBLIC_KEY=
# KHALTI_SECRET_KEY=
# NEXT_PUBLIC_KHALTI_URL=https://a.khalti.com/api/v2/ # Production

# ========================================
# File Upload & Storage
# ========================================
# AWS S3 for file storage
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=ap-south-1
# AWS_S3_BUCKET=padhaiHub-uploads

# Cloudinary for image/video hosting
# NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=
# CLOUDINARY_API_KEY=
# CLOUDINARY_API_SECRET=

# Maximum file upload size (in bytes)
# NEXT_PUBLIC_MAX_FILE_SIZE=10485760 # 10MB

# ========================================
# Live Class Integration
# ========================================
# Zoom API credentials
# ZOOM_API_KEY=
# ZOOM_API_SECRET=
# ZOOM_WEBHOOK_SECRET=

# Google Meet / Jitsi
# NEXT_PUBLIC_JITSI_DOMAIN=meet.jit.si
# JITSI_APP_ID=

# ========================================
# Email Service
# ========================================
# SMTP Configuration
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@padhaiHub.com

# SendGrid (alternative)
# SENDGRID_API_KEY=

# ========================================
# SMS Service (for OTP)
# ========================================
# Twilio
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=

# Sparrow SMS (Nepal)
# SPARROW_SMS_TOKEN=
# SPARROW_SMS_FROM=

# ========================================
# Analytics & Monitoring
# ========================================
# Google Analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Sentry for error tracking
# NEXT_PUBLIC_SENTRY_DSN=

# ========================================
# Social Authentication (OAuth)
# ========================================
# Google OAuth
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# Facebook OAuth
# FACEBOOK_CLIENT_ID=
# FACEBOOK_CLIENT_SECRET=

# ========================================
# Application Settings
# ========================================
# Application environment
NODE_ENV=development

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API request timeout (milliseconds)
# NEXT_PUBLIC_API_TIMEOUT=30000

# Enable debug mode
# NEXT_PUBLIC_DEBUG=true

# ========================================
# Feature Flags
# ========================================
# NEXT_PUBLIC_ENABLE_LIVE_CLASSES=true
# NEXT_PUBLIC_ENABLE_PAYMENTS=true
# NEXT_PUBLIC_ENABLE_CHAT=true

# ========================================
# Third-Party Integrations
# ========================================
# Recaptcha (for form spam protection)
# NEXT_PUBLIC_RECAPTCHA_SITE_KEY=
# RECAPTCHA_SECRET_KEY=

# Pusher (for real-time notifications) - DEPRECATED: Use Socket.IO + Firebase instead
# NEXT_PUBLIC_PUSHER_APP_KEY=
# PUSHER_APP_ID=
# PUSHER_SECRET=
# NEXT_PUBLIC_PUSHER_CLUSTER=ap2

# ========================================
# Firebase (Push Notifications)
# ========================================
# Firebase Web App Configuration
# Get these from Firebase Console > Project Settings > General > Your apps
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# Firebase Cloud Messaging VAPID Key
# Get this from Firebase Console > Project Settings > Cloud Messaging > Web Push certificates
NEXT_PUBLIC_FIREBASE_VAPID_KEY=
